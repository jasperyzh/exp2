---
const title = "EXP | JY";
const description = "Various Experiments of JY";

import path from "path";
const all_exp = await Astro.glob("../exp/*.astro");
const all_standard = await Astro.glob("../standard/*.astro");
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <!-- Global Metadata -->
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width,initial-scale=1" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />

        <!-- Canonical URL -->
        <!-- <link rel="canonical" href={canonicalURL} /> -->

        <!-- Primary Meta Tags -->
        <title>{title}</title>
        <meta name="description" content={description} />
        <!-- <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5"> -->
        <link
            rel="stylesheet"
            href="/bootstrap-icons-1.10.5/font/bootstrap-icons.css"
        />
    </head>

    <body>
        <pre class="hint">Press `</pre>
        <section id="quick_link" class="p-4" style="display: none">
            <h1>Welcome to my playground!</h1>
            <div class="flex gap-8">
                <section>
                    <h2>/exp</h2>
                    {
                        all_exp.map((item) => (
                            <li>{path.parse(item.file).name}</li>
                        ))
                    }
                </section>
                <section>
                    <h2>/standard</h2>
                    {
                        all_standard.map((item) => (
                            <li>{path.parse(item.file).name}</li>
                        ))
                    }
                </section>
            </div>
            <hr />
        </section>
        <slot />
    </body>
    <style>
        *,
        *::before,
        *::after {
            box-sizing: border-box;
        }

        h1,
        h2,
        body {
            margin: 0;
            padding: 0;
        }

        .hint {
            position: absolute;
            top: 0;
            right: 0;
            margin: 0;
            padding: .5rem 1rem;
            background: #ddd;
            color: #aaa;
            display: inline-block;
            opacity: 0.5;
        }
    </style>
    <script is:inline>
        document.addEventListener("keydown", function (event) {
            if (event.key === "`") {
                var element = document.getElementById("quick_link");
                element.style.display =
                    element.style.display === "none" ? "block" : "none";
            }
        });
    </script>
</html>

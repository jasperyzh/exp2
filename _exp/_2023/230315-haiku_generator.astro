  // Define arrays of syllables for each line
  // Define arrays for each line with the correct number of syllables
  const line1 = ["Autumn", "Leaves", "Harvest", "Chilly", "Golden"];
  const line2 = [
    "Quietly",
    "Lonely",
    "Gently",
    "Patiently",
    "Delicately",
    "Meditating",
    "Refreshing",
  ];
  const line3 = [
    "Serenade",
    "Guitar",
    "Raindrops",
    "Pond",
    "Misty",
    "Cicadas",
    "Butterflies",
  ];

  // Function to generate a random haiku
  function generateHaiku() {
    const haiku = [
      line1[Math.floor(Math.random() * line1.length)],
      line2[Math.floor(Math.random() * line2.length)],
      line3[Math.floor(Math.random() * line3.length)],
    ];
    return haiku.join(" "); // Join the lines into a single string
  }

